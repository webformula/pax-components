{
  "scripts": {
    "run:theme": "cp src/theme.css local/theme.css",
    "run:sass": "node-sass src/entry.scss local/entry.css",
    "run:sass::watch": "$1 --watch",
    "run:js": "webpack --config webpack.dev.config.cjs",
    "run:js::watch": "$1 --watch",
    "run:js,html": "node --experimental-modules buildDocsEntry.mjs",
    "run:js,html::watch": "nodemon -x $1",
    "mount:public": "mount src-docs/public --to /",
    "mount:paxcomponents": "mount local --to /pax-components",
    "mount:monaco": "mount monaco-dist",
    "mount:src": "mount src-docs --to /",
    "build:index.html": "replace '_VERSION_' '_V_' build/index.html"
  },
  "plugins": [
    "@snowpack/plugin-webpack"
  ],
  "install": [
    "@webformula/pax-core"
  ],
  "buildOptions": {
    "baseUrl": "./"
  }
}
