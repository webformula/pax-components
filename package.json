{
  "name": "@webformula/pax-components",
  "version": "0.8.1-beta",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec \"npm run package:dev\" & npm run serve",
    "serve": "http-server ./ -p 8081",
    "package:dev": "npm run build:docs-entry && npm run package:dev:docs && npm run package:dev:components",
    "package:dev:docs": "webpack --config webpack.dev.docs.config.cjs",
    "package:dev:components": "webpack --config webpack.dev.components.config.cjs",
    "package:prod": "npm run build:docs-entry && npm run package:prod:docs && npm run package:prod:components",
    "package:prod:docs": "rm -rf dist-docs && webpack --config webpack.prod.docs.config.cjs",
    "package:prod:components": "rm -rf dist && webpack --config webpack.prod.components.config.cjs &&  && rm dist/theme",
    "build:docs-entry": "node --experimental-modules buildDocsEntry.mjs",
    "cypress:open": "cypress open",
    "cypress:open-and-serve": "npm start & cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webformula/pax-components.git"
  },
  "author": "Ben Rubin (B-3PO)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webformula/pax-components/issues"
  },
  "homepage": "https://github.com/webformula/pax-components#readme",
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "cypress": "^3.3.0",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-string-replace-plugin": "^1.1.0",
    "http-server": "^0.11.1",
    "mini-css-extract-plugin": "^0.9.0",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "nodemon": "^1.19.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "string-replace-loader": "^2.2.0",
    "string.prototype.matchall": "^4.0.2",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "@webformula/pax-core": "github:webformula/pax-core#v0.7.1"
  }
}
