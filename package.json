  },
  "homepage": "https://github.com/webformula/pax-components#readme",
  "devDependencies": {
    "css-loader": "^2.1.0",
    "cypress": "^3.3.0",
    "mini-css-extract-plugin": "^0.5.0",
    "watch": "^1.0.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "@webformula/pax-core": "github:webformula/pax-core#v0.2.4-beta",
