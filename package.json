{
  "name": "@webformula/pax-components",
  "version": "0.12.1-beta",
  "description": "Web components using material design language",
  "type": "module",
  "scripts": {
    "start": "node-sass src/entry.scss local/entry.css && snowpack dev --config snowpack.config.json",
    "release": "snowpack build --config snowpack.config.release.js && replace '_VERSION_' '0.12.1-beta' build/* && replace '\"web_modules/@webformula/pax-core.js' '\"/web_modules/@webformula/pax-core.js' build/pax-entry.js",
    "build:editor": "webpack --progress --config webpack.monaco.editor.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webformula/pax-components.git"
  },
  "author": "Ben Rubin (B-3PO)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webformula/pax-components/issues"
  },
  "homepage": "https://github.com/webformula/pax-components#readme",
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@purtuga/esm-webpack-plugin": "^1.2.1",
    "@snowpack/plugin-webpack": "^1.2.0",
    "css-loader": "^3.6.0",
    "cypress": "^3.3.0",
    "file-loader": "^6.0.0",
    "glob": "^7.1.3",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "node-sass": "^4.13.1",
    "replace": "^1.2.0",
    "snowpack": "^2.5.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "@webformula/pax-core": "file:../pax-core"
  }
}
